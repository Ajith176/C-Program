#include <stdio.h>

int main() 
{
 int mat1[12][12],mat2[12][12]
 ,sum[12][12];
 int i,j,row,col;
    printf("enter the number of rows and columns \n");
    scanf("%d%d",&row,&col);
    printf("enter the elements of the first matrix\n");
    for(i=0;i<row;i++)
    
    {
        for (j=0;j<col;j++)
        {
            scanf(" enter the elements of the second matrix\n ");
            for(i=0;i<row;i++)
            {
                for(j=0;j<col;j++)
            }
            scanf("%d",&mat2[i][j]);
        }
    }
    for(i=0;i<row;i++)
    {
        for(j=0;j<col;j++)
        {
            sum[i][j]=mat1[i][j]
            +mat2[i][j];
        }
    }
    printf(" the resultant matrix formed on adding the two matrix\n");
    for(i=0;i<row;i++)
    {
        for(j=0;j<col;j++)
        {
            printf("%d\t",sum[i][j]);
        }
        printf("\n");
    }

    return 0;
}
